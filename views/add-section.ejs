<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="container">
    <form action="/add" method="POST">
        <div class="form-group">
          <label for="sectionName">Section Name:</label>
          <input type="text" id="sectionName" name="sectionName" class="form-control" pattern="([A-Z][a-z0-9/ ]*)+" required>
        </div>
        <div class="form-group">
            <label for="sectionDescription">Section Description:</label>
            <textarea class="form-control" placeholder="Leave a description here" id="sectionDescription"  name="sectionDescription" required></textarea>
          </div>
          <div class="form-group">
            <label for="duration">Duration:</label>
            <input type="number" class="form-control" id="duration" name="duration" required></input>
          </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="isMainTask" name="isMainTask">
            <label class="form-check-label" for="isMainTask">Is main task</label>
          </div>
        <div class="form-group">
          <label for="course">Course:</label>
          <select id="course" name="course" class="form-control" required>
            <% courses.forEach(course => { %>
              <option value="<%= course._id %>"><%= course.courseName %></option>
            <% }); %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
        
      </form>
</div>