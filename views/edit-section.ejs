<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="container">
    <form action="/edit/<%= section._id %>" method="POST">
        <div class="form-group">
          <label for="sectionName">Section Name:</label>
          <input type="text" id="sectionName" value="<%= section.sectionName %>" name="sectionName" class="form-control" pattern="([A-Z][a-z0-9/ ]*)+" required>
        </div>
        <div class="form-group">
          <label for="sectionDescription">Section Description:</label>
          <textarea class="form-control" id="sectionDescription" name="sectionDescription" required><%= section.sectionDescription %></textarea>
        </div>
        <div class="form-group">
          <label for="duration">Duration:</label>
          <input type="number" class="form-control" id="duration" name="duration" required value="<%= section.duration %>">
        </div>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="isMainTask" name="isMainTask" <%= section.isMainTask ? 'checked' : '' %>>
          <label class="form-check-label" for="isMainTask">Is main task</label>
        </div>
        <div class="form-group">
          <label for="course">Course:</label>
          <select id="course" name="course" class="form-control" required>
            <% courses.forEach(course => { %>
              <option value="<%= course._id %>" <%= section.course == course._id ? 'selected' : '' %>><%= course.courseName %></option>
            <% }); %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
</div>