
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<div class="container">
    <h1 class="my-4">Dashboard</h1>
    <a href="/add" class="btn btn-primary">Add Section</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Section ID</th>
                <th>Section Name</th>
                <th>Section Description</th>
                <th>Main task</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% sections.forEach(section => { %>
                <tr>
                    <td><%= section._id %></td>
                    <td><%= section.sectionName %></td>
                    <td><%= section.sectionDescription %></td>
                    <td><%= section.isMainTask ? 'Yes' : 'no' %></td>
                    <td>
                        <div class="d-flex flex-row">
                            <a href="/edit/<%= section._id %>" class="btn btn-primary mr-3">Edit</a>
                            <a href="#" onclick="confirmDelete('<%= section._id %>')" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<script>
    function confirmDelete(id) {
      if (confirm('Are you sure you want to delete this item?')) {
        window.location.href = '/delete/' + id;
      }
    }
    </script>